@model hotiguassu.Models.UsuarioModels

@{
    ViewBag.Title = "Log On";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<head>
    <meta charset="utf-8" />
</head>

  <div class="header">
        <div class="subpages-nav">
            @Html.Partial("_MenuInicialPartial")
        </div>
  </div>     


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#submit").click(function () {
            $("form").submit();
        });
        $("#cancelar").click(function () {
            $("form").submit();
        });
    });

</script>

@Html.ValidationSummary(true, "Login não pode ser concluido, por favor verifique os erros encontrados.")

@using (Html.BeginForm()) {
            <div class="col-16" style="margin: 0 auto;margin-top: 150px;">
            <p>
                Por favor entre com seu login e senha. @Html.ActionLink("Register", "Register") se não tiver uma conta.
            </p>
                <h2 class="h2 p2">Login</h2>
		
                        <label><input type="text" value="login" onBlur="if(this.value=='') this.value='login'" onFocus="if(this.value =='login' ) this.value=''"></label>
                        <label><input type="text" value="senha" onBlur="if(this.value=='') this.value='senha'" onFocus="if(this.value =='senha' ) this.value=''"></label>
                        <label> @Html.CheckBoxFor(m => m.RememberMe, new { @style="width: 35px;"}) @Html.LabelFor(m => m.RememberMe) </label>
                    
                    <div class="btns">
                        <a id="cancelar" href="#" class="link-1">Cancelar</a>
                        <a id="submit" href="#" class="link-1">Logar</a>
                    </div>
        </div>
}

@model hotiguassu.Models.GirlsModels

@{
    ViewBag.Title = "Registre-se";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $("#submit").click(function () {
            $("form").submit();
        });
        $("#cancelar").click(function () {
            $("form").submit();
        });
    });

</script>

  <div class="header">
        <div class="subpages-nav">
            @Html.Partial("_MenuInicialPartial")
        </div>
  </div>     

<div style="width: 240px;margin: 0 auto;padding: 30px;">
<h2>Crie uma conta</h2>
<p>
    Use o formulario para inciar a sua conta.
</p>
<p>
    Senha deve ter o minimo de @Membership.MinRequiredPasswordLength caracteres.
</p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "A sua conta não pode ser criada, por favor reveja o erros encontrados.")
    
	    <fieldset>
        <label><input type="text" value="login" onBlur="if(this.value=='') this.value='login'" onFocus="if(this.value =='login' ) this.value=''"></label>
        <label><input type="text" value="senha" onBlur="if(this.value=='') this.value='senha'" onFocus="if(this.value =='senha' ) this.value=''"></label>
                    <div class="btns">
                        <a id="cancelar" href="#" class="link-1">Cancelar</a>
                        <a id="submit" href="#" class="link-1">Logar</a>
                    </div>
        </fieldset>  
    
}
</div>
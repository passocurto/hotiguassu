        $("#DtNacimento").mask("99/99/9999");
        $("#opcaoTelefone1").mask("(99) 9999-9999");
        $("#opcaoTelefone2").mask("(99) 9999-9999");
        $("#opcaoTelefone3").mask("(99) 9999-9999");
        $("#Altura").maskMoney({ showSymbol: false, decimal: "," });
        $("#Peso").maskMoney({ showSymbol: false, decimal: "," });
        $("#Quadris").maskMoney({ showSymbol: false, decimal: "," });
        $("#Busto").maskMoney({ showSymbol: false, decimal: "," });

        $("#submit").click(function () {
            $("form").submit();
        });
        $("#cancelar").click(function () {
            $("form").submit();
        });
    });

</script>
